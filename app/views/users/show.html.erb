<section class='d-flex align-items-center flex-column mt-3'>
  <%= image_tag 'user.png',class:'user_icon' %>
  <h1><%= current_user.name %></h1>
  <div>
    <div class='d-flex align-items-center mb-2'>
      <%= image_tag 'transaction_icons/tr.png',class:'payment_icon rounded-circle mr-2 border p-1' %>
      <%= link_to 'All my transactions', user_transactions_path(current_user,icon:true), class:'h5 m-0 border-bottom border-dark pb-1' %>
    </div>
    <div class='d-flex align-items-center mb-2'>
      <%= image_tag 'transaction_icons/i4.jpg',class:'payment_icon rounded-circle mr-2 border p-2' %>
      <%= link_to 'All my external transactions', user_transactions_path(current_user), class:'h5 m-0 border-bottom border-dark pb-1' %>
    </div>
    <div class='d-flex align-items-center mb-2'>
      <%= image_tag 'transaction_icons/i6.webp',class:'payment_icon rounded-circle mr-2 border p-2' %>
      <%= link_to 'All groups',groups_path, class:'h5 m-0 border-bottom border-dark pb-1' %>
    </div>
  </div>

  <div class=' d-flex'>
    <div class='mr-5 d-flex flex-column align-items-center'>
      <p class='font-weight-bold'>Expensivest</p>
       <%= link_to @most_expensive_transaction.name, user_transaction_path(current_user,@most_expensive_transaction) %>
    </div>
    <div class='d-flex flex-column align-items-center'>
      <p class='font-weight-bold'>Cheapest</p>
       <%= link_to @most_cheapest_transaction.name, user_transaction_path(current_user,@most_cheapest_transaction) %>
    </div>
  </div>
</section>
