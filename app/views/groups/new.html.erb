<% if !@group.errors.empty?%>
  <ul class='alert alert-danger px-5'>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% @group.errors.full_messages.each do |msg|%>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>
<p class="d-flex justify-content-center text-primary h3 font-weight-bold">Create Group</p>
<%= form_with scope: :group, url: groups_path,class:'col-md-8 mx-md-auto mt-2',local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
    <div class="col">
      <%= f.text_field :name,autofocus: true, placeholder: 'Group name', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class='col'>
      <%= f.label 'Icon' %>
      <%= f.file_field :icon %><br>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-default btn-primary ml-3" %>
<% end %>
